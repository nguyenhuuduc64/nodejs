<div class="mt-4">
  <h2>Sửa khóa học</h2>
  <form method="post" action="/courses/{{course._id}}?_method=PUT">
    <div class="mb-3">
      <label for="name" class="form-label">Tên khóa học </label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{course.name}}"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Mô tả</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        value="{{course.description}}"
      />
    </div>
    <div class="mb-3">
      <label for="videoId" class="form-label">ID cho video</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        value="{{course.videoId}}"
      />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật khóa học</button>
  </form>

</div>